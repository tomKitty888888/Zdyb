<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_bg"

    android:minHeight="@dimen/dp_140"
    >

    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minHeight="@dimen/dp_25"
        android:background="@drawable/dialog_bar_bg"
        android:gravity="center"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="提示"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_12"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_marginEnd="@dimen/dp_10"
            app:layout_constraintTop_toTopOf="@+id/bar"
            app:layout_constraintLeft_toLeftOf="@+id/bar"

            app:layout_constraintRight_toRightOf="@+id/bar"
            android:gravity="center|left"
            />
    </androidx.appcompat.widget.LinearLayoutCompat>



    <com.zdyb.lib_common.widget.QMUIAlphaImage
        android:id="@+id/actionButton"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_10"
        app:layout_constraintTop_toTopOf="@+id/bar"
        app:layout_constraintRight_toRightOf="@+id/bar"
        app:layout_constraintBottom_toBottomOf="@+id/bar"
        />

    <TextView
        android:id="@+id/tv_hint"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_5"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_10"
        android:gravity="center|left"
        app:layout_constraintTop_toBottomOf="@+id/bar"
        app:layout_constraintBottom_toTopOf="@+id/edText"
        app:layout_constraintLeft_toLeftOf="@+id/edText"
        app:layout_constraintRight_toRightOf="@+id/edText"
        />

    <EditText
        android:id="@+id/edText"
        android:layout_width="@dimen/dp_220"
        android:layout_height="@dimen/dp_30"
        android:padding="@dimen/dp_5"
        android:textColor="@color/black"
        android:textSize="@dimen/sp_10"
        android:hint="@string/please_enter_the_content"
        android:inputType="text"
        android:background="@drawable/bg_frame_radius_5_stroke_1"
        android:gravity="center_vertical|left"
        android:focusable="true"
        android:focusableInTouchMode="true"
        app:layout_constraintTop_toBottomOf="@+id/bar"
        app:layout_constraintBottom_toTopOf="@+id/placeholder"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        >
        <requestFocus/>
    </EditText>

    <TextView
        android:id="@+id/tv_inputSum"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_10"
        android:layout_marginStart="@dimen/dp_5"
        app:layout_constraintTop_toTopOf="@+id/edText"
        app:layout_constraintBottom_toBottomOf="@+id/edText"
        app:layout_constraintLeft_toRightOf="@+id/edText"
        />

    <TextView
        android:id="@+id/confirm"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_25"
        android:text="@string/confirm"
        android:textSize="@dimen/sp_12"
        android:gravity="center"
        android:foreground="?android:attr/selectableItemBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/cancel"
        />

    <TextView
        android:id="@+id/cancel"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_25"
        android:text="@string/cancel"
        android:textSize="@dimen/sp_12"
        android:gravity="center"
        android:foreground="?android:attr/selectableItemBackground"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/confirm"
        />
    <View
        android:id="@+id/placeholder"
        android:layout_width="@dimen/dp_0_5"
        android:layout_height="@dimen/dp_25"
        android:background="@color/line_grey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/confirm"
        />
    <View
        android:id="@+id/placeholder2"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_0_5"
        android:background="@color/line_grey"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/placeholder"
        />

</androidx.constraintlayout.widget.ConstraintLayout>