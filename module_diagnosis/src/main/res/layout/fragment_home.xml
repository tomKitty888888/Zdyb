<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragment.HomeFragment"
    >


    <androidx.cardview.widget.CardView
        android:id="@+id/action_diagnosis"
        android:layout_width="@dimen/dp_146"
        android:layout_height="@dimen/dp_254"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/dp_5"
        android:elevation="@dimen/dp_10"
        app:cardElevation="@dimen/dp_10"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginStart="@dimen/dp_15"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/action_d_img"
                android:layout_width="@dimen/dp_68"
                android:layout_height="@dimen/dp_68"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/dp_57"
                android:background="@mipmap/icon_d_diagnosis"
                />

            <TextView
                android:id="@+id/action_d_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/action_d_img"
                android:layout_marginTop="@dimen/dp_27"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/text_black_colors"
                android:text="@string/action_diagnosis"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/action_ecu_rw"
        android:layout_width="@dimen/dp_146"
        android:layout_height="@dimen/dp_254"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/dp_5"
        android:elevation="@dimen/dp_10"
        app:cardElevation="@dimen/dp_10"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/action_diagnosis"
        android:layout_marginStart="@dimen/dp_15"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/action_e_img"
                android:layout_width="@dimen/dp_68"
                android:layout_height="@dimen/dp_68"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/dp_57"
                android:background="@mipmap/icon_d_diagnosis"
                />

            <TextView
                android:id="@+id/action_e_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/action_e_img"
                android:layout_marginTop="@dimen/dp_27"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/text_black_colors"
                android:text="@string/action_ecu_rw"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/action_ppd"
        android:layout_width="@dimen/dp_146"
        android:layout_height="@dimen/dp_254"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/dp_5"
        android:elevation="@dimen/dp_10"
        app:cardElevation="@dimen/dp_10"

        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/action_ecu_rw"
        android:layout_marginStart="@dimen/dp_15"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/action_ppd_img"
                android:layout_width="@dimen/dp_68"
                android:layout_height="@dimen/dp_68"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="@dimen/dp_57"
                android:background="@mipmap/icon_d_diagnosis"
                />

            <TextView
                android:id="@+id/action_ppd_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/action_ppd_img"
                android:layout_marginTop="@dimen/dp_27"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/text_black_colors"
                android:text="@string/action_post_processing_diagnostics"
                />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/action_cart_dvs"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_74"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/dp_5"
        android:elevation="@dimen/dp_10"
        app:cardElevation="@dimen/dp_10"

        app:layout_constraintTop_toTopOf="@+id/action_ppd"
        app:layout_constraintLeft_toRightOf="@+id/action_ppd"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/action_dvs_img"
                android:layout_width="@dimen/dp_58"
                android:layout_height="@dimen/dp_58"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@mipmap/icon_d_diagnosis"
                android:layout_marginLeft="@dimen/dp_8"
                />

            <TextView
                android:id="@+id/action_dvs_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@+id/action_dvs_img"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="@dimen/dp_5"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/text_black_colors"
                android:text="@string/action_diesel_vehicle_series"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/action_cart_nevs"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_74"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/dp_5"
        android:elevation="@dimen/dp_10"
        app:cardElevation="@dimen/dp_10"

        app:layout_constraintTop_toBottomOf="@+id/action_cart_dvs"
        app:layout_constraintLeft_toRightOf="@+id/action_ppd"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/action_nevs_img"
                android:layout_width="@dimen/dp_58"
                android:layout_height="@dimen/dp_58"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@mipmap/icon_d_diagnosis"
                android:layout_marginLeft="@dimen/dp_8"
                />

            <TextView
                android:id="@+id/action_nevs_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@+id/action_nevs_img"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginLeft="@dimen/dp_5"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/text_black_colors"
                android:text="@string/action_new_energy_vehicle_series"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>


    <androidx.cardview.widget.CardView
        android:id="@+id/action_cart_ngvs"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_74"
        android:foreground="?android:attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/dp_5"
        android:elevation="@dimen/dp_10"
        app:cardElevation="@dimen/dp_10"

        app:layout_constraintBottom_toBottomOf="@+id/action_ppd"
        app:layout_constraintLeft_toRightOf="@+id/action_ppd"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginStart="@dimen/dp_15"
        android:layout_marginEnd="@dimen/dp_15"
        android:layout_marginTop="@dimen/dp_15"
        >
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <ImageView
                android:id="@+id/action_ngvs_img"
                android:layout_width="@dimen/dp_58"
                android:layout_height="@dimen/dp_58"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:background="@mipmap/icon_d_diagnosis"
                android:layout_marginStart="@dimen/dp_8"
                />

            <TextView
                android:id="@+id/action_ngvs_tv"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                app:layout_constraintLeft_toRightOf="@+id/action_ngvs_img"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginStart="@dimen/dp_5"
                android:ellipsize="none"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/text_black_colors"
                android:text="@string/action_natural_gas_vehicle_series"
                />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>