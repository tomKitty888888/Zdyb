<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@mipmap/icon_jc_page_bg"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.SetActivity"
    >

    <RelativeLayout
        android:id="@+id/headLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:background="@color/color_theme"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/back"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/white"
            android:padding="@dimen/dp_5"
            />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>


    <View
        android:id="@+id/view1"
        android:layout_width="@dimen/dp_300"
        android:layout_height="@dimen/dp_200"
        android:background="@drawable/dialog_bg"

        app:layout_constraintTop_toBottomOf="@+id/headLayout"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        />


    <Button
        android:id="@+id/selectAppFile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="从U盘中选择APK升级文件"
        android:textColor="@color/white"
        android:layout_marginTop="@dimen/dp_20"
        app:layout_constraintTop_toTopOf="@+id/view1"
        app:layout_constraintLeft_toLeftOf="@+id/view1"
        />

    <TextView
        android:id="@+id/appUrl"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_12"
        android:padding="@dimen/dp_10"
        android:textColor="@color/bar_bg_start"
        android:background="@color/item_bg"
        android:text="路径:"
        app:layout_constraintTop_toBottomOf="@+id/selectAppFile"
        app:layout_constraintLeft_toLeftOf="@+id/view1"

        />
    <Button
        android:id="@+id/upApp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认升级"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/appUrl"
        app:layout_constraintLeft_toLeftOf="@+id/view1"
        />
    <Button
        android:id="@+id/openFileMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="打开文件管理"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/upApp"
        app:layout_constraintLeft_toLeftOf="@+id/view1"
        />

    <Button
        android:id="@+id/testDevice"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_10"
        android:text="检测诊断设备"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/openFileMsg"
        app:layout_constraintLeft_toLeftOf="@+id/view1"
        />

    <TextView
        android:id="@+id/tv_version"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_10"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:padding="@dimen/dp_5"
        />
    <TextView
        android:id="@+id/tv_sn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_10"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tv_version"
        android:padding="@dimen/dp_5"
        />
    <TextView
        android:id="@+id/tv_appVersion"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="@dimen/sp_10"
        android:textColor="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/tv_sn"
        android:padding="@dimen/dp_5"
        />
</androidx.constraintlayout.widget.ConstraintLayout>