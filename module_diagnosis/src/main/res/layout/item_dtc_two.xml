<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/itemLayout"
    android:foreground="?android:attr/selectableItemBackground"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="@dimen/dp_30">


    <TextView
        android:id="@+id/valueOne"
        android:layout_width="@dimen/dp_80"
        android:layout_height="match_parent"
        android:textSize="@dimen/sp_12"
        android:gravity="center"
        android:textColor="@color/text_black_colors"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <View
        android:id="@+id/partition"
        android:layout_width="@dimen/dp_2"
        android:layout_height="0dp"
        app:layout_constraintLeft_toRightOf="@+id/valueOne"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
    <TextView
        android:id="@+id/valueTwo"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textSize="@dimen/sp_12"
        android:gravity="center_vertical"
        app:layout_constraintLeft_toRightOf="@+id/partition"
        app:layout_constraintRight_toLeftOf="@+id/partitionThree"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />

    <View
        android:id="@+id/partitionThree"
        android:layout_width="@dimen/dp_2"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/valueFour"
        />
    <androidx.appcompat.widget.LinearLayoutCompat
        android:id="@+id/valueFour"
        android:layout_width="@dimen/dp_60"
        android:layout_height="match_parent"
        android:textSize="@dimen/sp_14"
        android:gravity="center"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        >
        
        <ImageView
            android:layout_width="@dimen/dp_14"
            android:layout_height="@dimen/dp_14"
            android:src="@mipmap/icon_d_parse"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/sp_8"
            android:gravity="center"
            android:layout_marginLeft="@dimen/dp_1_5"
            android:text="@string/dtc_deep_analysis"
            android:textColor="@color/text_black_colors"
            />

    </androidx.appcompat.widget.LinearLayoutCompat>
</androidx.constraintlayout.widget.ConstraintLayout>