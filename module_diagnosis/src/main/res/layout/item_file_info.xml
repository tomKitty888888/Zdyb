<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="@dimen/dp_40"
    >

    <ImageView
        android:id="@+id/fileImg"
        android:layout_width="@dimen/dp_30"
        android:layout_height="match_parent"
        android:src="@mipmap/icon_file_unknown"
        android:layout_marginTop="@dimen/dp_2"
        android:layout_marginBottom="@dimen/dp_2"
        app:layout_constraintLeft_toLeftOf="parent"
        />
    <TextView
        android:id="@+id/tv_fileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="@dimen/dp_10"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/fileImg"
        android:textSize="@dimen/sp_12"
        android:text="文件名称"
        />

    <TextView
        android:id="@+id/tv_fileTime"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="@+id/fileImg"
        app:layout_constraintLeft_toRightOf="@+id/fileImg"
        android:textSize="@dimen/sp_9"
        />

    <TextView
        android:id="@+id/tv_fileSize"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:layout_marginStart="@dimen/dp_10"
        app:layout_constraintBottom_toBottomOf="@+id/tv_fileTime"
        app:layout_constraintLeft_toRightOf="@+id/tv_fileTime"
        android:textSize="@dimen/sp_9"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/item_bg"
        />
</androidx.constraintlayout.widget.ConstraintLayout>