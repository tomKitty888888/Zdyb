<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:paddingTop="@dimen/dp_5"
    android:layout_height="match_parent">

    <View
        android:id="@+id/v_bg"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_28"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/but_newGrouping"
        android:layout_marginStart="@dimen/dp_10"
        android:layout_marginEnd="@dimen/dp_20"
        android:background="@drawable/bg_frame_radius_5_stroke_1_back"
        />
    <ImageView
        android:id="@+id/img_select"
        android:layout_width="@dimen/dp_15"
        android:layout_height="@dimen/dp_15"
        app:layout_constraintTop_toTopOf="@+id/v_bg"
        app:layout_constraintBottom_toBottomOf="@+id/v_bg"
        app:layout_constraintLeft_toLeftOf="@+id/v_bg"
        android:layout_marginStart="@dimen/dp_10"
        android:src="@mipmap/icon_d_cds_select"
        />
    <EditText
        android:id="@+id/selectEdit"
        android:layout_width="0dp"
        android:layout_height="@dimen/dp_28"
        app:layout_constraintTop_toTopOf="@+id/v_bg"
        app:layout_constraintBottom_toBottomOf="@+id/v_bg"
        app:layout_constraintLeft_toRightOf="@+id/img_select"
        app:layout_constraintRight_toLeftOf="@+id/but_select"
        android:layout_marginStart="@dimen/dp_10"
        android:hint="@string/cds_please_enter_a_search_keyword"
        android:textSize="@dimen/sp_12"
        android:background="@null"
        />

    <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundButton
        android:id="@+id/but_select"
        android:layout_width="@dimen/dp_70"
        android:layout_height="@dimen/dp_22"

        app:layout_constraintRight_toLeftOf="@+id/but_newGrouping"
        app:layout_constraintTop_toTopOf="@+id/v_bg"
        app:layout_constraintBottom_toBottomOf="@+id/v_bg"
        android:layout_marginEnd="@dimen/dp_25"
        android:theme="@style/QMUI.Compat"
        android:textColor="@color/white"
        android:textSize="@dimen/sp_12"
        android:text="@string/cds_select"
        app:qmui_radius="@dimen/dp_5"
        app:qmui_borderWidth="@dimen/dp_0"
        app:qmui_backgroundColor="@color/button_bg"
        />

    <com.qmuiteam.qmui.alpha.QMUIAlphaLinearLayout
        android:id="@+id/but_newGrouping"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_22"
        android:theme="@style/QMUI.Compat"
        app:layout_constraintTop_toTopOf="@+id/v_bg"
        app:layout_constraintBottom_toBottomOf="@+id/v_bg"
        app:layout_constraintRight_toLeftOf="@+id/but_myGrouping"
        android:layout_marginEnd="@dimen/dp_25"
        android:paddingLeft="@dimen/dp_5"
        android:paddingRight="@dimen/dp_5"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/bg_frame_radius_5_c_37bb4c"
        >
        <TextView
            android:id="@+id/tv_new"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/sp_12"
            android:text="@string/cds_new_grouping"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"/>
        <ImageView
            android:layout_width="@dimen/dp_12"
            android:layout_height="@dimen/dp_12"
            android:src="@mipmap/icon_d_cds_add"
            android:layout_marginLeft="@dimen/dp_5"
            />
    </com.qmuiteam.qmui.alpha.QMUIAlphaLinearLayout>

    <com.qmuiteam.qmui.alpha.QMUIAlphaLinearLayout
        android:id="@+id/but_myGrouping"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/dp_22"
        android:theme="@style/QMUI.Compat"
        app:layout_constraintTop_toTopOf="@+id/v_bg"
        app:layout_constraintBottom_toBottomOf="@+id/v_bg"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginEnd="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_5"
        android:paddingRight="@dimen/dp_5"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@drawable/bg_frame_radius_5_c_37bb4c"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="@dimen/sp_12"
            android:text="@string/cds_my_grouping"
            android:gravity="center"
            android:textColor="@color/white"
            android:textStyle="bold"/>
        <ImageView
            android:layout_width="@dimen/dp_10"
            android:layout_height="@dimen/dp_10"
            android:src="@mipmap/icon_d_caret_down"
            android:layout_marginLeft="@dimen/dp_5"
            />
    </com.qmuiteam.qmui.alpha.QMUIAlphaLinearLayout>


    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scrollbars="vertical"
        android:scrollbarSize="@dimen/dp_5"
        android:paddingLeft="@dimen/dp_10"
        android:paddingRight="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_5"
        app:layout_constraintTop_toBottomOf="@+id/v_bg"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        tools:listitem="@layout/item_cds_two"
        />

</androidx.constraintlayout.widget.ConstraintLayout>