<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:id="@+id/headLayout"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_30"
        android:background="@color/color_theme"
        app:layout_constraintTop_toTopOf="parent"
        >

        <TextView
            android:id="@+id/tv_back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/back"
            android:textSize="@dimen/sp_12"
            android:textColor="@color/white"
            android:padding="@dimen/dp_5"
            />

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            />
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="@dimen/dp_100"
        android:layout_height="0dp"

        app:layout_constraintTop_toBottomOf="@+id/headLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        tools:listitem="@layout/item_sensor"
        app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
        />

    <View
        android:id="@+id/parentPanel"
        android:layout_width="@dimen/dp_5"
        android:layout_height="0dp"
        app:layout_constraintLeft_toRightOf="@+id/recyclerView"
        app:layout_constraintTop_toBottomOf="@+id/headLayout"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@color/color_theme"
        />

    <RadioGroup
        android:id="@+id/radioGroup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintLeft_toRightOf="@+id/parentPanel"
        app:layout_constraintTop_toBottomOf="@+id/headLayout"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="@dimen/dp_10"
        >

        <RadioButton
            android:id="@+id/radio_pdf"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_30"
            android:background="@drawable/radiobutton_background"
            android:button="@null"
            android:gravity="center"
            android:textSize="@dimen/sp_12"
            android:checked="true"
            android:textColor="@drawable/radiobutton_textcolor"
            android:text="维修帮助"
            android:textStyle="bold"
            />
        <RadioButton
            android:id="@+id/radio_video"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_30"
            android:background="@drawable/radiobutton_background"
            android:button="@null"
            android:gravity="center"
            android:textSize="@dimen/sp_12"
            android:textColor="@drawable/radiobutton_textcolor"
            android:layout_marginStart="@dimen/dp_10"
            android:text="部件视频"
            android:textStyle="bold"
            />
        <RadioButton
            android:id="@+id/radio_errorCode"
            android:layout_width="@dimen/dp_100"
            android:layout_height="@dimen/dp_30"
            android:background="@drawable/radiobutton_background"
            android:button="@null"
            android:gravity="center"
            android:textSize="@dimen/sp_12"
            android:textColor="@drawable/radiobutton_textcolor"
            android:layout_marginStart="@dimen/dp_10"
            android:text="故障码解析演示"
            android:textStyle="bold"
            />
    </RadioGroup>

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/viewPager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintLeft_toRightOf="@+id/parentPanel"
        app:layout_constraintTop_toBottomOf="@+id/radioGroup"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        />
</androidx.constraintlayout.widget.ConstraintLayout>